{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "lib": ["ES2016"]
  },
  "include": ["src/index.ts"],
  "exclude": ["dist", "node_modules"]
}
